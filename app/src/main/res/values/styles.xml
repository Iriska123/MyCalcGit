<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!-- Customize your theme here. -->
        <style name="ButtonStyle" >
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_columnWeight">1</item>
            <item name="android:backgroundTint">@color/textViewBackGray</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/button_text_size</item>
        </style>
        <style name="ButtonStyle2" >
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_columnWeight">1</item>
            <item name="android:backgroundTint">@color/textViewBackOrange</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/button_text_size</item>
        </style>

        <style name="ButtonStyle3" >
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:backgroundTint">@color/textViewBackLightGray</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">@dimen/button_text_size</item>
        </style>

    <style name="EditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/result_size</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>