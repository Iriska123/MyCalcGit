<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.CalculatorActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:text="22"
        android:gravity="end"
        android:textSize="@dimen/result_size" />


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:useDefaultMargins="true">


        <Button
            android:id="@+id/button_AC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="fill_horizontal"
            android:backgroundTint="@color/textViewBackLightGray"
            android:text="@string/key_ac"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackLightGray"
            android:text="@string/key_percent"
            android:textColor="@color/black"
            android:textSize="@dimen/button_text_size"
             />

        <Button
            android:id="@+id/button_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackOrange"
            android:text="@string/key_div"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_7"
            android:text="@string/key_7"
            style="@style/ButtonStyle" />


        <Button
            android:id="@+id/button_8"
            android:text="@string/key_8"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_9"
            android:text="@string/key_9"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_mult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackOrange"
            android:text="@string/key_mult"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_4"
            android:text="@string/key_4"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_5"
            android:text="@string/key_5"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_6"
            android:text="@string/key_6"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackOrange"
            android:text="@string/key_min"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_1"
            android:text="@string/key_1"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_2"
            android:text="@string/key_2"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_3"
            android:text="@string/key_3"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackOrange"
            android:text="@string/key_plus"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="fill_horizontal"
            android:backgroundTint="@color/textViewBackGray"
            android:text="@string/key_0"
            android:textSize="@dimen/button_text_size" />

        <Button
            android:id="@+id/button_dot"
            android:text="@string/key_dot"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/textViewBackOrange"
            android:text="@string/key_equal"
            android:textSize="@dimen/button_text_size" />


    </GridLayout>
</LinearLayout>

